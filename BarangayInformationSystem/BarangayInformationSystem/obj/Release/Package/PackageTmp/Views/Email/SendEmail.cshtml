
@{
    ViewBag.Title = "SendEmail";
    Layout = "~/Views/Shared/_Inner_Layout.cshtml";
}

<h2>Send Email</h2>
<hr />
@using (Html.BeginForm("SendEmail", "Email"))
{
<table>
    <tr>
        <td>TO : </td>
        <td><input type="text" name="msgTo" value="" /></td>
    </tr>
    <tr>
        <td>SUBJECT : </td>
        <td><input type="text" name="msgSubject" value="" /></td>
    </tr>
    <tr>
        <td>BODY : </td>
        <td><textarea name="msgBody"></textarea></td>
    </tr>
    <tr>
        <td>
            <input type="submit" name="name" value="Send" />
        </td>
    </tr>
</table>

}